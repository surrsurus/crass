// Apply the lightgray BG and margin 0 all at once
.stretched-outer-content = stretch outer-content

// Vertically fit element and center text in it
.centered-vertical = centered vertical-fit

// Shorten names
c = content-text

// Red text for content element
.text-red = content-text red

// Though we can also use this. No dot needed
text-red = content-text red

// But we actually don't even need the hyphen at all too
text red = content-text red